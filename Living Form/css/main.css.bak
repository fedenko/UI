@charset "utf-8";
/* CSS Document */

body
{
background:#1d1e1f;
background-repeat:repeat-x;
padding:2px;
margin:0;
}

#wrapper-outer
{
background:url(../images/shine-bg.jpg) no-repeat;
width:960px;

margin:auto;
}

#wrapper-inner
{
width:615px;
margin:auto;
}

#form-wrapper
{
background-image:url(../images/form-bg.png);
height:737px;
width:615px;
margin-top:10px;
}

#form-wrapper h1
{
margin:0;
padding:0;
font-family:Verdana, Arial, Helvetica, sans-serif;
/*text-transform:lowercase;*/
font-weight:lighter;
font-size:17px;
color:#FFFFFF;
font-style:italic;
padding-left:15px;
padding-top:20px;
}

#form-wrapper p
{
color:#66686a;
padding-left:15px;
padding-right:15px;
padding-top:15px;
padding-bottom:30px;
margin:0;
font-family:Geneva, Arial, Helvetica, sans-serif;
font-weight:bold;
font-size:13px;
line-height:18px;
display:block;
}

label
{
color:#66686a;
padding-left:15px;
padding-right:15px;
padding-top:0px;
margin:0;
font-family:Geneva, Arial, Helvetica, sans-serif;
font-size:11px;
line-height:18px;
display:block;
}

#logo
{
padding:20px 0px 20px 0px;
}

.effect-label{
width:320px;
height:35px;
background-repeat:no-repeat;
float:right;
display:block;
}

#static
{
color:#fff;
/*background-image:url(../images/invalid-span.gif);*/
margin-top:63px;
}

#inverted
{
color:#fff;
/*background-image:url(../images/invalid-span.gif);*/
margin-top:63px;
}

#pulsing
{
background-image:url(../images/pulsing-span.gif);
margin-top:45px;
}

#invalid
{
background-image:url(../images/invalid-span.gif);
margin-top:60px;
}

#living
{
background-image:url(../images/living-span.gif);
margin-top:63px;
}

#multicolor
{
background-image:url(../images/multicolor-span.gif);
margin-top:62px;
}

